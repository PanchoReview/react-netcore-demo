@model IEnumerable<ReactNetCoreDemo.Web.Models.CommentModel>
@{
}

@Html.React("CommentBox", new
{
    initialData = Model,
    url = Url.Action("Comments"),
    submitUrl = Url.Action("AddComment"),
    pollInterval = 2000,
})

@section Scripts {    
    <script src="@Url.Content("~/js/components/CommentBox.jsx")"></script>
    <script src="@Url.Content("~/js/components/CommentList.jsx")"></script>
    <script src="@Url.Content("~/js/components/Comment.jsx")"></script>
    <script src="@Url.Content("~/js/components/CommentForm.jsx")"></script>    
}



